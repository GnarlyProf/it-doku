@{
    var hideTree = (ViewBag.HideTree as bool?) == true;

    Guid? currentId = null;
    if (ViewBag.CurrentObjectId is Guid g1) currentId = g1;
    else if (ViewData["CurrentId"] is Guid g2) currentId = g2;
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - IT-Doku</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="/css/site.css" />

    @RenderSection("Head", required: false)
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="app-shell d-flex align-items-center">
            <a class="navbar-brand fw-semibold" href="/">IT-Doku</a>
        </div>
    </nav>

    <div class="container-xxl my-3 px-3">
        @if ((ViewBag.HideTree as bool?) == true)
        {
            <main class="app-content">
                @RenderBody()
            </main>
        }
        else
        {
            <div class="app-grid">
                <aside class="app-sidebar">
                    <div class="sidebar-sticky">
                        @await Component.InvokeAsync("TreePanel", new { currentId = (Guid?)(ViewBag.CurrentObjectId ?? ViewData["CurrentId"]) })
                    </div>
                </aside>

                <main class="app-content">
                    @RenderBody()
                </main>
            </div>
        }
    </div>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
